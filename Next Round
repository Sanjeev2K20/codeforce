Question: https://codeforces.com/contest/158/problem/A
code: https://onlinegdb.com/kDgdQDXSYK


#include<iostream>
using namespace std;
int main(){
    int n,k;
    cin>>n>>k;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int A=0;
    for(int i=0;i<n;i++){
        if(arr[i]>=arr[k- 1]){
            if(arr[i]>0){
                A++;
            }
        }
    }
    cout<<A<<endl;
}
