    #include<iostream>
    using namespace std;
    int main(){
        int t;
        cin>>t;
        while(t--){
            int n,m;
            cin>>n>>m;
            int B=min(m,n);
            int C=max(m,n);
            int A=B + (C- 1)+ (B- 1);
            if(A==1){
                cout<<0<<endl;
            }
            else{
                cout<<A<<endl;
            }
        }
    }
